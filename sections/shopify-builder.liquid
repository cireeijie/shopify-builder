{%- style -%}
    * {
      box-sizing: border-box;
    }
    
    #shopify-section-{{ section.id }} {
      {%- if section.settings.visibility_desktop -%}
        display: flex;
      {%- else -%}
        display: none;
      {%- endif -%}
      flex-direction: {{ section.settings.flex_direction_desktop }};
      align-items: {{ section.settings.align_items_desktop }};
      justify-content: {{ section.settings.justify_content_desktop }};
      gap: {{ section.settings.gap_desktop }}px;
      margin: {{ section.settings.margin_top_desktop }}px {{ section.settings.margin_right_desktop }}px {{ section.settings.margin_bottom_desktop }}px {{ section.settings.margin_left_desktop }}px;
      padding: {{ section.settings.padding_top_desktop }}px {{ section.settings.padding_right_desktop }}px {{ section.settings.padding_bottom_desktop }}px {{ section.settings.padding_left_desktop }}px;
      {%- if section.settings.border_type != 'none' -%}
        border: {{ section.settings.border_width }}px {{ section.settings.border_type }} {{ section.settings.border_color }};
      {%- endif -%}
      border-radius: {{ section.settings.border_radius }}px;
      background-color: {{ section.settings.background_color }};
      {%- if section.settings.background_image_desktop -%}
        background-image: url('{{ section.settings.background_image_desktop | image_url: width: 1080 }}');
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
      {%- endif -%}
      {%- if section.settings.min_height_desktop > 0 -%}
        min-height: {{ section.settings.min_height_desktop }}px;
      {%- endif -%}
      {%- if section.settings.custom_width_desktop != blank -%}
        width: {{ section.settings.custom_width_desktop }};
      {%- elsif section.settings.width_desktop > 0 -%}
        width: {{ section.settings.width_desktop }}px;
      {%- endif -%}
    }
  
    #shopify-section-{{ section.id }} .inner-con {
      width: 100%;
      margin: 0 auto;
      max-width: {{ section.settings.max_width }}px;
      display: flex;
      flex-direction: {{ section.settings.flex_direction_desktop }};
      align-items: {{ section.settings.align_items_desktop }};
      justify-content: {{ section.settings.justify_content_desktop }};
      gap: {{ section.settings.gap_desktop }}px;
      {%- if section.settings.min_height_desktop > 0 -%}
        min-height: {{ section.settings.min_height_desktop }}px;
      {%- endif -%}
    }
  
    @media (max-width: 767px) {
      #shopify-section-{{ section.id }} {
        {%- if section.settings.visibility_mobile -%}
          display: flex;
        {%- else -%}
          display: none;
        {%- endif -%}
        flex-direction: {{ section.settings.flex_direction_mobile }};
        align-items: {{ section.settings.align_items_mobile }};
        justify-content: {{ section.settings.justify_content_mobile }};
        gap: {{ section.settings.gap_mobile }}px;
        margin: {{ section.settings.margin_top_mobile }}px {{ section.settings.margin_right_mobile }}px {{ section.settings.margin_bottom_mobile }}px {{ section.settings.margin_left_mobile }}px;
        padding: {{ section.settings.padding_top_mobile }}px {{ section.settings.padding_right_mobile }}px {{ section.settings.padding_bottom_mobile }}px {{ section.settings.padding_left_mobile }}px;
        {%- if section.settings.background_image_mobile -%}
          background-image: url('{{ section.settings.background_image_mobile | image_url: width: 1080 }}');
          background-position: center;
          background-size: cover;
          background-repeat: no-repeat;
        {%- endif -%}
        {%- if section.settings.min_height_mobile > 0 -%}
          min-height: {{ section.settings.min_height_mobile }}px;
        {%- endif -%}
        {%- if section.settings.custom_width_mobile != blank -%}
          width: {{ section.settings.custom_width_mobile }};
        {%- elsif section.settings.width_mobile > 0 -%}
          width: {{ section.settings.width_mobile }}px;
        {%- endif -%}
      }
    
      #shopify-section-{{ section.id }} .inner-con {
        width: 100%;
        max-width: {{ section.settings.max_width }}px;
        display: flex;
        flex-direction: {{ section.settings.flex_direction_mobile }};
        align-items: {{ section.settings.align_items_mobile }};
        justify-content: {{ section.settings.justify_content_mobile }};
        gap: {{ section.settings.gap_mobile }}px;
        {%- if section.settings.min_height_mobile > 0 -%}
          min-height: {{ section.settings.min_height_mobile }}px;
        {%- endif -%}
      }
    }
  {%- endstyle -%}
  
  {%- if section.settings.container_size == 'boxed' -%}
    <div class="inner-con">
  {%- endif -%}
  
  {%- content_for 'blocks' -%}
  
  {%- if section.settings.container_size == 'boxed' -%}
